/**
 * Provides D5 compatability wrapper for node/comment preprocess functions.
 */
function advanced_forum_addvars($hook, $variables) {
  switch ($hook) {
    case 'node':
    case 'comment':
      advanced_forum_call_preprocess($hook, $variables);
  }

  return $variables;
}

